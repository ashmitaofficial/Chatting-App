<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile"
        app:shapeAppearanceOverlay="@style/pic_style"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:id="@+id/show_text_message_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testing msg"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:padding="8dp"
        android:background="@drawable/background_left"
        android:layout_toRightOf="@id/profile_image_left"
        android:textStyle="bold">
    </TextView>

    <ImageView
        android:id="@+id/left_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/profile_image_left"
        android:layout_marginLeft="6dp"
        android:visibility="gone">
    </ImageView>
    
    <TextView
        android:id="@+id/text_seen_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seen"
        android:layout_below="@id/show_text_message_left"
        >

    </TextView>

    

</RelativeLayout>